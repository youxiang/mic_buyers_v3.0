<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/color_f7f7f7"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/common_title_back_button"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_common_btn" />

    <TextView
        android:id="@+id/common_title_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/common_title_back_button"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/search_again_layout"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="48dp"
        android:layout_toRightOf="@id/common_title_back_button"
        android:background="@color/mic_white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_search" />

        <TextView
            android:id="@+id/search_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColor="@color/light_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/common_title_right_button1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_common_btn" />

        <ImageView
            android:id="@+id/common_title_right_button2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_common_btn" />

        <ImageView
            android:id="@+id/common_title_right_button3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_common_btn" />

        <TextView
            android:id="@+id/title_register_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_common_btn"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/join_free"
            android:textColor="@color/color_e62e2e"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>