<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mic_rfq_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mic_white"
    android:orientation="vertical" >

    <include
        android:id="@+id/mic_rfq_title_layout"
        layout="@layout/common_title" />

    <ScrollView
        android:id="@+id/mic_rfq_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mic_rfq_title_layout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/mic_rfq_common" />

            <include
                android:id="@+id/mic_rfq_more_layout"
                layout="@layout/mic_rfq_more" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>