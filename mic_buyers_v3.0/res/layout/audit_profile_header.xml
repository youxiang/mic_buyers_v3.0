<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mic_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_ar"
            android:layout_width="77dp"
            android:layout_height="87dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/audit_profile" />

        <TextView
            android:id="@+id/ap_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/iv_ar"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_what_is_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_ar"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/iv_ar"
            android:src="@drawable/audit_profile_what" />

        <TextView
            android:id="@+id/tv_what_is_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_ar"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/iv_what_is_ar"
            android:text="What is Audit Report?"
            android:textColor="#0065b2"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_ar"
            android:layout_marginTop="17sp"
            android:background="@color/mic_menu_line" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/ar_diver" />

</LinearLayout>