<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_e6e6e6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <RelativeLayout
                android:id="@+id/rl_setting_safe_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_setting_item" >

                <TextView
                    android:id="@+id/tv_setting_safe_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/safe_image_display"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_setting_safe_image"
                    android:layout_width="85dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="13dp"
                    android:button="@drawable/setting_checkbox_selector"
                    android:clickable="false"
                    android:focusable="false" />

                <TextView
                    android:id="@+id/tv_setting_safe_image_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_setting_safe_image"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="13dp"
                    android:text="@string/safe_image_display"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <RelativeLayout
                android:id="@+id/rl_setting_feature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_setting_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/features"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_quotation_detail_company_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <RelativeLayout
                android:id="@+id/rl_setting_aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_setting_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/about"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_quotation_detail_company_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <RelativeLayout
                android:id="@+id/rl_setting_terms_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_setting_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/mic_setting_terms"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_quotation_detail_company_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <RelativeLayout
                android:id="@+id/rl_setting_contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_setting_item" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/mic_home_meun_text10"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_quotation_detail_company_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <RelativeLayout
                android:id="@+id/rl_setting_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_setting_item" >

                <TextView
                    android:id="@+id/tv_setting_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/mic_home_meun_text11"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ic_update_new"
                    android:layout_width="31dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_setting_update"
                    android:background="@drawable/ic_update_new"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_cccccc" />

            <LinearLayout
                android:id="@+id/ll_setting_signout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_cccccc" />

                <TextView
                    android:id="@+id/tv_setting_signout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_setting_item"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/mic_home_meun_text9"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_cccccc" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>