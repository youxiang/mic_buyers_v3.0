<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_selector"
    android:orientation="vertical"
    android:paddingBottom="13dp"
    android:paddingTop="13dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_rfq_list_item_unread"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_quotation_unread"
                android:gravity="center_horizontal"
                android:textColor="@color/color_ffffff"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_rfq_list_item_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_rfq_list_item_expiredDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_rfq_reject_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_eff3f9"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_rfq_reject"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_rfq_reject" />

        <TextView
            android:id="@+id/tv_rfq_reject_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_rfq_reject"
            android:background="@color/color_EFF2F7"
            android:ellipsize="end"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/color_4383bf"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>