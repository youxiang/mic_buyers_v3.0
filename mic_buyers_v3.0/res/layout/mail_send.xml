<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_mail_to_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/to"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_mail_to_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mail_to_title"
                android:textColor="@color/color_4383bf"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_mail_from_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mail_to_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:text="@string/from"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_mail_from_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mail_to_title"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/tv_mail_from_title"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_cccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <EditText
                android:id="@+id/mail_send_subject_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/subject"
                android:maxLines="5"
                android:paddingRight="30dp"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/mail_send_subject_clear"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/mail_send_subject_input"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_input_clear" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_cccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tv_mail_send_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_mail_shortcut"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="5dp"
                android:text="@string/quick"
                android:textColor="@color/color_ffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/tv_mail_send_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/inquiry_content_hint"
            android:paddingBottom="10dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="17sp" />
    </LinearLayout>

</ScrollView>