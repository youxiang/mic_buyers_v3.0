<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_window_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_ebf7ff"></solid>

            <corners android:radius="1dp" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_ebf7ff"></solid>

            <corners android:radius="1dp" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_d9f0ff"></solid>

            <corners android:radius="1dp" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape>        
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_ebf7ff"></solid>

            <corners android:radius="1dp" />

            <padding android:left="10dp" android:right="10dp"></padding>
        </shape>        
    </item>

</selector>