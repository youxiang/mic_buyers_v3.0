<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="medittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/mic_rfq_edit_bg</item>
    </style>

    <style name="MailCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>

    <style name="mic_rfq_edit_style">
        <item name="android:background">@drawable/mic_rfq_edit_bg</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/mic_home_menu_text</item>
        <item name="android:textColorHint">@color/mic_home_search_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="mic_rfq_text_style">
        <item name="android:background">@drawable/mic_select</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/mic_home_menu_text</item>
        <item name="android:textColorHint">@color/mic_home_search_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="FilterMyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/filter_checkbox_selector</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:maxHeight">40.0dip</item>
    </style>
    
    <style name="FilterMyGroupCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/filter_group_checkbox_selector</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:maxHeight">40.0dip</item>
    </style>

    <style name="newuser_joinnow_button_style">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="shareDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="my_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/my_edittext</item>
    </style>
    
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:layout_marginRight">12.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>

    <item name="contentFL1" type="id"/>
    <item name="contentFL2" type="id"/>
    <item name="contentFL3" type="id"/>
    <color name="bg">@color/color_f2f2f2</color>
    <item name="pull_to_refresh_gridview" type="id"/>

</resources>